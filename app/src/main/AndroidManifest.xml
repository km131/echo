<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.echo_kt">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 向SD卡写入数据权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!--  后台刷新服务和通知栏要用  -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    <!--    android:requestLegacyExternalStorage="true" 取消android10沙盒模式用于读取音频数据-->
    <!--    android:exported="false" 禁止其他应用访问应用的内容提供程序-->
    <application
        android:name=".BaseApplication"
        android:icon="@mipmap/echo"
        android:roundIcon="@mipmap/echo"
        android:supportsRtl="true"
        android:label="echo"
        android:usesCleartextTraffic="true"
        android:requestLegacyExternalStorage="true"
        android:exported="false"
        android:theme="@style/SplashTheme"
        tools:replace="android:label">

        <activity android:name=".MainActivity"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".ui.notification.PlayService"/>
    </application>

</manifest>