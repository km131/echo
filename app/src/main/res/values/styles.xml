<resources>

    <style name="SplashTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#FFFFFF</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/logo</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.Echo</item>
    </style>
    <!-- To see how these attributes are used, please visit https://material.io/develop/android/theming/color/ -->
    <style name="Base.Theme.Echo" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">#F2F3F7</item>
        <item name="colorSecondary">#39A7BB</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorAccent">@color/Secondary</item>
        <item name="colorSurface">#FCFCFC</item>
        <!--   背景色     -->
        <item name="android:colorBackground">@color/white</item>
    </style>

    <style name="TextAppearance.Sunflower.Toolbar.Text" parent="TextAppearance.MaterialComponents.Headline5" >
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="text_title">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="text_link">
        <item name="android:textColor">#2F58EF</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="text_oneLine">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="text_oneLine_18">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="text_oneLine_16">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#272727</item>
    </style>
    <style name="navigation" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">#2B2B2B</item>
    </style>
    <style name="circle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>
